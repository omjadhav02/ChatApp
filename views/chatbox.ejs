        let btn = document.querySelector("button");
        
            console.log("working");
                
            //Scrolling
            window.setTimeout(function() {
            let elem = document.querySelector('.textarea');
            elem.scrollTop = elem.scrollHeight;
        });
    
    </script>
</body>
</html>


